{
  "name": "spryker/api",
  "type": "library",
  "description": "Api module",
  "license": "proprietary",
  "require": {
    "php": ">=7.2",
    "spryker/application": "^3.0.0",
    "spryker/event-dispatcher-extension": "^1.0.0",
    "spryker/kernel": "^3.30.0",
    "spryker/symfony": "^3.0.0",
    "spryker/util-encoding": "^2.0.1",
    "spryker/util-text": "^1.1.1"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/container": "*",
    "spryker/event-dispatcher": "*",
    "spryker/log": "*",
    "spryker/silex": "*",
    "spryker/testify": "*"
  },
  "suggest": {
    "spryker/container": "Add this module when you want to use the Container.",
    "spryker/event-dispatcher": "Add this module when you want to use the EventDispatcher.",
    "spryker/log": "For logging request and response.",
    "spryker/silex": "Add this when you still want to use the abandoned Silex."
  },
  "autoload": {
    "psr-4": {
      "Spryker\\": "src/Spryker/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerTest\\": "tests/SprykerTest/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/",
    "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
